{
	"name" : "piko/user-module",
	"description" : "Piko user management module.",
	"keywords" : [
		"user",
		"piko",
		"rbac",
		"module"
	],
	"license" : "LGPL-3.0",
	"require" : {
		"piko/db-record": "^2.0",
		"piko/framework" : "^3.4",
		"piko/i18n": "^2.1",
		"piko/user": "^2.0",
		"nette/mail" : "^4.0",
		"byjg/migration": "^5.0"
	},
	"require-dev" : {
		"phpunit/phpunit" : "^10.5",
		"squizlabs/php_codesniffer" : "^3.5"
	},
	"scripts" : {
		"tests" : "phpunit",
		"coding-standard" : "phpcs --standard=vendor/piko/core/coding-standard  --extensions=php --ignore='*/(vendor|views|messages|tests)/*' .",
		"coding-standard-fix" : "phpcbf --standard=vendor/piko/core/coding-standard  --extensions=php --ignore='*/(vendor|views|messages|tests)/*' ."
	},
	"autoload" : {
		"psr-4" : {
			"Piko\\" : "src"
		}
	}
}
